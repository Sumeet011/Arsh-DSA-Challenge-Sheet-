class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        if (m == 0 || n == 0 || m > n) {
            return 0;
        }
        
        Collections.sort(a);
        long min = Long.MAX_VALUE;
        for (int i = 0; i <= n - m; i++) {
            long diff = a.get(i + m - 1) - a.get(i);
            if (diff < min) {
                min = diff;
            }
        }
        
        return min;
        
    }
}
